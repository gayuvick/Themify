{% schema %}
{
  "name": "FAQ",
  "settings": [],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="faq-section">
  {% for block in section.blocks %}
    <div class="faq-item">
      <div class="faq-question">
        {{ block.settings.question }}
        <button class="toggle-answer" aria-expanded="false">+</button>
      </div>
      <div class="faq-answer" style="display: none;">
        {{ block.settings.answer }}
      </div>
    </div>
  {% endfor %}
</div>

